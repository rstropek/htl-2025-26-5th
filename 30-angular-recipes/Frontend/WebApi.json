{
  "openapi": "3.0.1",
  "info": {
    "title": "WebApi | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/ping": {
      "get": {
        "tags": [
          "WebApi"
        ],
        "description": "A simple ping endpoint to check if the service is running.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/customers": {
      "get": {
        "tags": [
          "WebApi"
        ],
        "description": "Get all customers ordered by ID",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Customer"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "WebApi"
        ],
        "description": "Create a new customer",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Customer"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          },
          "409": {
            "description": "Conflict"
          }
        }
      }
    },
    "/customers/{id}": {
      "get": {
        "tags": [
          "WebApi"
        ],
        "description": "Get a customer by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "patch": {
        "tags": [
          "WebApi"
        ],
        "description": "Update a customer (partial update)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CustomerPatchDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "tags": [
          "WebApi"
        ],
        "description": "Delete a customer by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Customer": {
        "required": [
          "id",
          "name",
          "dateOfBirth",
          "customerValue",
          "revenue",
          "isActive"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date"
          },
          "customerValue": {
            "type": "integer",
            "format": "int32"
          },
          "revenue": {
            "type": "number",
            "format": "double"
          },
          "isActive": {
            "type": "boolean"
          }
        }
      },
      "CustomerPatchDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "default": null,
            "nullable": true
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date",
            "default": null,
            "nullable": true
          },
          "customerValue": {
            "type": "integer",
            "format": "int32",
            "default": null,
            "nullable": true
          },
          "revenue": {
            "type": "number",
            "format": "double",
            "default": null,
            "nullable": true
          },
          "isActive": {
            "type": "boolean",
            "default": null,
            "nullable": true
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "WebApi"
    }
  ]
}