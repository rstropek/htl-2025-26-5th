{
  "openapi": "3.0.1",
  "info": {
    "title": "WebApi | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/gift-categories": {
      "get": {
        "tags": [
          "WishlistEndpoints"
        ],
        "description": "Retrieves all gift categories (public, no PIN required). ",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/verify-pin/{name}": {
      "post": {
        "tags": [
          "WishlistEndpoints"
        ],
        "description": "Verifies a wishlist PIN and returns whether it belongs to a parent or child.",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VerifyPinRequestDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VerifyPinResponseDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/wishlist/{name}/items": {
      "post": {
        "tags": [
          "WishlistEndpoints"
        ],
        "description": "Retrieves all wishlist items (parent only).",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthRequestDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WishlistItemDto"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    },
    "/wishlist/{name}/items/{itemId}/mark-as-bought": {
      "post": {
        "tags": [
          "WishlistEndpoints"
        ],
        "description": "Marks a wishlist item as bought/unbought (parent only). ",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "itemId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MarkAsBoughtRequestDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/wishlist/{name}/items/{itemId}": {
      "delete": {
        "tags": [
          "WishlistEndpoints"
        ],
        "description": "Deletes an item from a wishlist (parent only). ",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "itemId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthRequestDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/wishlist/{name}/items/add": {
      "post": {
        "tags": [
          "WishlistEndpoints"
        ],
        "description": "Adds a new item to the wishlist (parent or child). Bought is always initialized as false.",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddItemRequestDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddItemResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddItemRequestDto": {
        "required": [
          "pin",
          "itemName",
          "category"
        ],
        "type": "object",
        "properties": {
          "pin": {
            "type": "string"
          },
          "itemName": {
            "type": "string"
          },
          "category": {
            "type": "string"
          }
        }
      },
      "AddItemResponseDto": {
        "required": [
          "id",
          "itemName",
          "category",
          "bought"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "itemName": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "bought": {
            "type": "boolean"
          }
        }
      },
      "AuthRequestDto": {
        "required": [
          "pin"
        ],
        "type": "object",
        "properties": {
          "pin": {
            "type": "string"
          }
        }
      },
      "MarkAsBoughtRequestDto": {
        "required": [
          "pin"
        ],
        "type": "object",
        "properties": {
          "pin": {
            "type": "string"
          },
          "bought": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "VerifyPinRequestDto": {
        "required": [
          "pin"
        ],
        "type": "object",
        "properties": {
          "pin": {
            "type": "string"
          }
        }
      },
      "VerifyPinResponseDto": {
        "required": [
          "role"
        ],
        "type": "object",
        "properties": {
          "role": {
            "type": "string"
          }
        }
      },
      "WishlistItemDto": {
        "required": [
          "id",
          "itemName",
          "category",
          "bought"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "itemName": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "bought": {
            "type": "boolean"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "WishlistEndpoints"
    }
  ]
}